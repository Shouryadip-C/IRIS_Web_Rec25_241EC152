@model List<Equipment>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Equipment Name</th>
            <th>Type</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Condition</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipment in Model)
        {
            <tr>
                <td>@equipment.Name</td>
                <td>@equipment.Type</td>
                <td>@equipment.Quantity</td>
                <td>
                    <span class="badge @GetStatusBadge(equipment.Status.ToString())">
                        @equipment.Status
                    </span>
                </td>
                <td>@equipment.Condition</td>
                <td>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-primary editEquipmentBtn" data-id="@equipment.Id">
                            <i class="fas fa-edit"></i>
                        </button>

                        <button class="btn btn-sm btn-outline-danger delete-btn"
                                data-id="@equipment.Id">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@functions {
    string GetStatusBadge(string status) => status switch
    {
        "Available" => "bg-success",
        "UnderMaintenance" => "bg-warning",
        _ => "bg-secondary"
    };
}
